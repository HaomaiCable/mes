<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hmmes.mapper.SiteColumnMapper" > 
<!-- Result Map-->
<resultMap id="BaseResultMap" type="com.hmmes.bean.SiteColumn" >
	<result column="id" property="id"/>
	<result column="siteId" property="siteId"/>
	<result column="name" property="name"/>
	<result column="link" property="link"/>
	<result column="pic" property="pic"/>
</resultMap>
       
<!-- site_column table all fields -->
<sql id="Base_Column_List" >
	 id,siteId,name,link,pic
</sql>
   
   
<!-- 查询条件 -->
<sql id="Example_Where_Clause">
where 1=1
<trim  suffixOverrides="," >
	<if test="id != null" >
	    and id =  #{id}
	</if>
	<if test="siteId != null" >
	    and siteId =  #{siteId}
	</if>
	 	<if test="name != null and name != ''" >
	    and name =  #{name}
	</if>
	 	<if test="link != null and link != ''" >
	    and link =  #{link}
	</if>
	 	<if test="pic != null and pic != ''" >
	    and pic =  #{pic}
	</if>
</trim>
</sql>
   

<!-- 插入记录 -->
<insert id="add" parameterType="Object" >
  <selectKey resultType="java.lang.Integer" order="AFTER" keyProperty="id">
	SELECT LAST_INSERT_ID()
  </selectKey>
  insert into site_column(id,siteId,name,link,pic)
 values(#{id},#{siteId},#{name},#{link},#{pic})
</insert>

<!-- 根据id，修改记录-->  
 <update id="update" parameterType="Object" >
  update site_column set siteId=#{siteId},name=#{name},link=#{link},pic=#{pic} where id=#{id}
 </update>
 
 <!-- 修改记录，只修改只不为空的字段 -->
<update id="updateBySelective" parameterType="Object" >
	update site_column set 
	<trim  suffixOverrides="," >
	<if test="siteId != null  ">
		siteId=#{siteId},
	</if>
	<if test="name != null  and name != '' ">
		name=#{name},
	</if>
	<if test="link != null  and link != '' ">
		link=#{link},
	</if>
	<if test="pic != null  and pic != '' ">
		pic=#{pic},
	</if>
	</trim> where id=#{id}
</update>

<!-- 删除记录 -->
<delete id="delete" parameterType="Object">
	delete 	 from site_column where id = #{id}
</delete>
 
<!-- 根据id查询 站点栏目 -->
<select id="queryById"  resultMap="BaseResultMap" parameterType="Object">
	select <include refid="Base_Column_List" /> 
	 from site_column where id = #{id}
</select>

<!-- 站点栏目 列表总数-->
<select id="queryByCount" resultType="java.lang.Integer"  parameterType="Object">
	select count(1) from site_column 
	<include refid="Example_Where_Clause"/>
</select>
  	
<!-- 查询站点栏目列表 -->
<select id="queryByList" resultMap="BaseResultMap"  parameterType="Object">
	select 
	<include refid="Base_Column_List"/>
	from site_column 
	<include refid="Example_Where_Clause"/>
	<if test="pager.orderCondition != null and pager.orderCondition != ''" >
      ${pager.orderCondition}
    </if>
    <if test="pager.mysqlQueryCondition != null and pager.mysqlQueryCondition != ''" >
       ${pager.mysqlQueryCondition}
    </if>
</select>


<!-- 根据站点id查询栏目 -->
<select id="queryBySiteId"  resultMap="BaseResultMap" parameterType="Object">
	select <include refid="Base_Column_List" /> 
	 from site_column where siteId = #{siteId}
</select>
  	
</mapper>   
